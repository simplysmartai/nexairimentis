      "position": [840, 300],
      "parameters": {
        "resource": "chat",
        "operation": "create",
        "model": "gpt-4o-mini",
        "messages": {
          "values": [
            {
              "role": "system",
              "content": "You are an expert web copywriter for Nexairi, an AI automation studio that builds and manages online projects for creators and small businesses."
            },
            {
              "role": "user",
              "content": "Write a homepage hero section for Nexairi. Output a JSON object with one key 'content', whose value is a single HTML string that contains: one <h1> headline, one <h3> subheadline, and one <p> paragraph that clearly explains what Nexairi does in a friendly, professional tone.\n\nRespond ONLY with that JSON object, no extra text."
            }
          ]
        },
        "options": {
          "temperature": 0.7
        }
      }
    },
    {
      "id": "update-homepage",
      "name": "Update Homepage",
      "type": "n8n-nodes-base.httpRequest",
