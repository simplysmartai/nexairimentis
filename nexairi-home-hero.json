        "method": "PUT",
        "url": "https://www.nexairi.com/wp-json/wp/v2/pages/32",
        "authentication": "basicAuth",
        "sendHeaders": true,
        "headerParametersJson": "{ \"Content-Type\": \"application/json\" }",
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"content\": {{$json[\"content\"]}}\n}"
      },
      "credentials": {
        "httpBasicAuth": {
          "name": "Code-Bot"
        }
      }
